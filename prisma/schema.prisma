generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider          = "zod-prisma-types"
  output            = "../src/generated/zod"
  useTypeAssertions = true
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserStatus {
  active
  inactive
}

model User {
  id          String     @id @default(uuid())
  email       String     @unique /// @zod.string.email()
  password    String
  firstName   String
  lastName    String?
  fullAddress String
  city        String?
  province    String?
  country     String?
  phone       String?
  status      UserStatus @default(active)
  createdAt   DateTime   @default(now())
  createdBy   String?
  updatedAt   DateTime   @updatedAt
  deletedAt   DateTime?

  // vendors         Vendor[]
  // userVendorRoles UserVendorRole[]
  // orders          Order[]
  // cart            Cart?
  // notifications   Notification[]
}
